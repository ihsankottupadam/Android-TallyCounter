<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="168dp"
		android:orientation="vertical"
		android:background="@drawable/bg1"
	>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<TextView
			android:id="@+id/de_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text=" title"
			android:gravity="center"
			android:textStyle="bold"
			android:textSize="23dp"
			android:textColor="#ff85edfb"
			android:paddingTop="18dp"
			android:paddingBottom="18dp"/>
		</LinearLayout>
		<EditText
			android:id="@+id/de_etext"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:textSize="22dp"
			android:background="@drawable/glasse"
          android:selectAllOnFocus="true"
			android:inputType="number"
			android:maxLength="6"
			 
			android:textColorHighlight="#5513F4F6"
			android:singleLine="true"
			android:textColor="#ff85edfb"/>
			
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@drawable/border"/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2">
			<Button
				android:id="@+id/de_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_weight="1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="CANCEL"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:background="@drawable/df_btn_selector"
				android:textStyle="bold"
				android:textColor="#ff85edfb"/>
			<View
				android:layout_width="2dp"
				android:layout_height="fill_parent"
				android:background="@drawable/borderv"/>
			<Button
				android:id="@+id/de_ok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_weight="1"
				android:background="@drawable/df_btn_selector"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="     OK     "
				android:textStyle="bold"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="#ff85edfb"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

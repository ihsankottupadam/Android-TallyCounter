<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="Settings"
	>
	<PreferenceCategory
        android:title="General">
	<CheckBoxPreference
        android:key="isvibrate"
        android:title="Vibration"
        android:summary="Vibration on count"
        android:defaultValue="true" />
	<CheckBoxPreference
        android:key="isbeep"
        android:title="Click sound"
        android:summary="Sound on count"
        android:defaultValue="false" />
		<CheckBoxPreference
			android:key="isAlert"
			android:title="Target alarm"
			android:summary="Alarm when target compleated"
			android:defaultValue="true" />
		<ListPreference
			android:key="font"
			android:title="Font style"
			android:entries="@array/fonts"
			android:entryValues="@array/fonts"
			android:summary="%s"
			android:defaultValue="Digital"/>
	<CheckBoxPreference
        android:key="iswake"
        android:title="Keep screen on"
        android:defaultValue="false" />
	</PreferenceCategory>
	<PreferenceCategory
        android:title="Controll">
	<ListPreference
        android:key="cType"
        android:title="Count method"
        android:dialogTitle="Select count method"
        android:entries="@array/cType"
        android:entryValues="@array/cTypeval"
		android:summary="%s"
        android:defaultValue="Tap"/>
	<CheckBoxPreference
        android:key="volbtn"
        android:title="Volume buttons"
        android:summary="Use Volume buttons as +/-"
        android:defaultValue="false" />
	</PreferenceCategory>
		
</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:colorAccent">#01acfc</item>
	</style>
	<style name="PrefTheme" parent="android:style/Theme.Material">
		<item name="android:colorPrimary">#0081BD</item>
		<item name="android:colorAccent">#01acfc</item>
		<item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
		<item name="android:windowBackground">@drawable/prefbg</item>
        <item name="android:background">#00000000</item>
	</style>
	<style name="myTheme.ActionBar" parent="android:style/Widget.Material.ActionBar">
		<item name="android:background">@drawable/action_bg</item>
		<item name="android:displayOptions">homeAsUp|showTitle</item>
		<item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
	</style>
	<style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>

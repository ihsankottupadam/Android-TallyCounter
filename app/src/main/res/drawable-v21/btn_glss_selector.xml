<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#336699">
	
	<item android:height="10dp"
		>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<corners android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
			<gradient android:type="linear" android:angle="90" android:startColor="#00FFFFFF" android:endColor="#44FFFFFF" android:useLevel="false"/>
			
		</shape>
	</item>
	<item android:width="10dp">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
			<gradient android:type="linear" android:angle="0" android:startColor="#44FFFFFF" android:endColor="#00000000" android:useLevel="false"/>

		</shape>
	</item>
	<item android:height="10dp" android:gravity="bottom"
	>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
			<gradient android:type="linear" android:angle="90" android:startColor="#44FFFFFF" android:endColor="#00000000" android:useLevel="false"/>

		</shape>
	</item>
	<item android:width="10dp" android:gravity="right">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
			<gradient android:type="linear" android:angle="0" android:startColor="#00FFFFFF" android:endColor="#44ffffff" android:useLevel="false"/>

		</shape>
	</item>
